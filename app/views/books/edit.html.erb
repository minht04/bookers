<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
<% end %>

<%=link_to 'Show', book_path(@book.id) %> 

<%=link_to 'Back', books_path %>