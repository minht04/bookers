<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%=link_to 'Show', book_path(book.id) %></th>
      <th><%=link_to 'Edit', edit_book_path(book.id) %></th>
      <th><%=link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></th>
    </tr>
    <% end %>
  </tbody>

</table>



<h2>New book</h2>
<%= form_with(model: @book, local: true) do |form| %>
 
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this from being saved:</h3>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <h4>Title</h4>
  <%= form.text_field :title %>

  <h4>Body</h4>
  <%=form.text_area :body %><br>

  <%= form.submit 'Create Book' %>
<% end %>