<h2>Books</h2>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% end %>
  </tbody>
  
</table>



<h2>New book</h2>

<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create Book' %>
<% end %>